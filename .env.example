# Database Configuration
POSTGRES_USER=airflow
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=airflow

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your_clickhouse_password_here
CLICKHOUSE_DATABASE=analytics

# Airflow Configuration
AIRFLOW_UID=1000
AIRFLOW_GID=0
AIRFLOW_PROJ_DIR=./
AIRFLOW_WEBSERVER_PORT=8081
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres/${POSTGRES_DB}
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here_32_characters_long
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__API__AUTH_BACKENDS=airflow.api.auth.backend.basic_auth

# Object Storage (MinIO)
MINIO_ROOT_USER=your_minio_user_here
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_ENDPOINT=localhost:9002
MINIO_CONSOLE_PORT=9003
MINIO_BUCKET=raw-data

# API Keys
DAWUM_API_KEY=your_dawum_api_key_here
DESTATIS_API_KEY=your_destatis_api_token_here
EUROSTAT_API_KEY=your_eurostat_api_key_here
GESIS_API_KEY=your_gesis_api_token_here
SOEP_API_KEY=your_soep_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=./data/logs/

# Slack Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Development
DEBUG=false
ENVIRONMENT=development

# DAWUM API Configuration
DAWUM_BASE_URL=https://api.dawum.de
DAWUM_API_KEY=your_dawum_api_key_here

# Security Settings
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
APP_SECRET_KEY=your_app_secret_key_here
